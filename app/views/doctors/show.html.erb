<h1><%= @doctor.name %></h1>
Department: <%= @doctor.department%><br/>
Appointments: <br/>
<ul>
  <% @doctor.appointments.each do |appointment| %>
    <%= appointment.appointment_datetime.strftime("%B %e, %Y at %k:%M") %> with <%= link_to appointment.patient.name, patient_path(appointment.patient) %>
  <% end %>
  <li></li>
</ul>
